<UserControl x:Class="MultiViewApp.View.View1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiViewApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lbl1" Grid.Row="0"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left"
                   Margin="15,5"
                   FontSize="40" FontWeight="DemiBold"><Run Language="pl-pl" Text="Desktop app for sense hat"/></TextBlock>

        <TextBlock x:Name="txt1" Grid.Row="1" 
                   Text="Welcome to desktop app for sense hat! 
                   " 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   FontSize="20" Width="354"/>
    </Grid>
</UserControl>
